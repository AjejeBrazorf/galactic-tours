{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "src/webcomponents/**/*", 
    "src/index.ts", 
    "src/components/Map/**/*", 
    "src/data/**/*", 
    "src/types/**/*"
  ],
  "exclude": ["node_modules", ".next", "dist"]
} 