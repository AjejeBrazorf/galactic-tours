{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "ESNext",
    "jsx": "react-jsx",
    "rootDir": "./src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node", "three"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false
  },
  "include": ["src"],
  "exclude": ["dist", "build", "node_modules"]
}
